@using FoodOrderingSite.PL.Model
@using System.Linq;
@{ 

    if (IsAjax)
    {
        var product = int.Parse(Request["Id"]);
        var user = int.Parse(User.Identity.Name);
        UserContext.GetInstance.AddProductToBasketById(user,product);
        @UserContext.GetInstance.Basket(user).Count();
    }

}
